{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:js-app"],
  "labels": ["dependencies", "renovate"],
  "timezone": "Pacific/Auckland",
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "rebaseWhen": "conflicted",
  "dependencyDashboard": false,
  "ignorePaths": ["apps/portal/**"],
  "packageRules": [
    {
      "description": "Group Next.js related packages",
      "groupName": "nextjs",
      "matchPackagePatterns": ["^next$", "^@next/"],
      "matchPaths": ["apps/frontend/**", "apps/backend/**"]
    },
    {
      "description": "Group Payload CMS related packages",
      "groupName": "payload-cms",
      "matchPackagePatterns": ["^payload$", "^@payloadcms/"],
      "matchPaths": ["apps/backend/**"]
    },
    {
      "description": "Group devDependencies",
      "groupName": "devDependencies",
      "matchDepTypes": ["devDependencies"]
    },
    {
      "description": "Group type definitions",
      "groupName": "type definitions",
      "matchPackagePatterns": ["^@types/"]
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": false
  }
}
