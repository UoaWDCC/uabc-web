{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "dependencyDashboard": false,
  "labels": ["dependencies", "renovate"],
  "rebaseWhen": "conflicted",
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "timezone": "Pacific/Auckland",
  "assignees": [],
  "reviewers": [],
  "packageRules": [
    {
      "description": "Automatically merge minor, patch, and digest updates if tests pass",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "branch",
      "platformAutomerge": true,
      "requiredStatusChecks": ["Verify"]
    },
    {
      "description": "Group Next.js related packages",
      "groupName": "nextjs",
      "matchPackagePatterns": ["^next$", "^@next/"],
      "matchPaths": ["apps/frontend/**", "apps/portal/**"]
    },
    {
      "description": "Group React-related packages",
      "groupName": "react",
      "matchPackagePatterns": ["^react$", "^react-dom$", "^@types/react$", "^@types/react-dom$"]
    },
    {
      "description": "Group Storybook-related packages",
      "groupName": "storybook",
      "matchPackagePatterns": ["^@storybook/", "^storybook$"]
    },
    {
      "description": "Group BiomeJS related packages",
      "groupName": "biomejs",
      "matchPackagePatterns": ["^@biomejs/"]
    },
    {
      "description": "Group testing libraries (Vitest, Testing Library)",
      "groupName": "testing",
      "matchPackagePatterns": ["^vitest$", "^@vitest/", "^@testing-library/"]
    },
    {
      "description": "Group Payload CMS related packages",
      "groupName": "payload-cms",
      "matchPackagePatterns": ["^payload$", "^@payloadcms/"],
      "matchPaths": ["apps/backend/**"]
    },
    {
      "description": "Group all @types packages separately if not matched by other groups",
      "groupName": "type-declarations",
      "matchPackagePatterns": ["^@types/"],
      "groupLate": true
    }
  ],
  "pnpm": {
    "fileMatch": ["(^|/)package\\.json$", "(^|/)pnpm-lock\\.yaml$"]
  }
}
