{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.local"],
  "globalEnv": [],
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "env": [
        "DATABASE_URI",
        "PAYLOAD_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "NEXT_PUBLIC_URL",
        "NEXT_PUBLIC_API_URL",
        "JWT_SECRET",
        "TURBO_TEAM",
        "TURBO_TOKEN"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types", "@repo/test-config#build"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "persistent": true
    },
    "generate:importmap": {
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "generate:types": {
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "payload": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^start"]
    },
    "storybook:build": {
      "cache": true,
      "dependsOn": ["^storybook:build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!**/*.stories.{tsx,jsx,mdx}"],
      "outputs": ["storybook-static/**"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["^test", "@repo/test-config#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "test:watch": {
      "cache": false,
      "dependsOn": ["^test:watch", "@repo/test-config#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "persistent": true
    },
    "test:coverage": {
      "cache": true,
      "dependsOn": ["^test:coverage", "@repo/test-config#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"]
    },
    "test:coverage:watch": {
      "cache": false,
      "dependsOn": ["^test:coverage:watch", "@repo/test-config#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"],
      "persistent": true
    },
    "test:ui": {
      "cache": false,
      "dependsOn": ["@repo/test-config#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"],
      "persistent": true
    },
    "clean": {
      "cache": false,
      "dependsOn": ["^clean"]
    }
  },
  "ui": "tui"
}
