{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.local"],
  "globalEnv": [],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!**/*.stories.{tsx,jsx,mdx}"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "public/dist/**",
        "storybook-static/**"
      ],
      "cache": true
    },
    "dev": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "theme": {
      "dependsOn": ["^theme"]
    },
    "start": {
      "dependsOn": ["^start"]
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
