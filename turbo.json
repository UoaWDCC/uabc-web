{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.local"],
  "globalEnv": [],
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "env": ["TURBO_TEAM", "TURBO_TOKEN"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "public/dist/**"]
    },
    "workers:build": {
      "cache": true,
      "dependsOn": ["^workers:build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "public/dist/**", "!.next/cache/**"]
    },
    "pages:build": {
      "cache": true,
      "dependsOn": ["^pages:build", "@repo/test-config#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".vercel/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types", "@repo/test-config#build", "@repo/shared#build"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "persistent": true
    },
    "generate:importmap": {
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "generate:types": {
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "payload": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^start"]
    },
    "storybook:build": {
      "cache": true,
      "dependsOn": ["^storybook:build", "@repo/test-config#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "packages/ui/**"],
      "outputs": ["storybook-static/**"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["^test", "@repo/test-config#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "test:watch": {
      "cache": false,
      "dependsOn": ["^test:watch", "@repo/test-config#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "persistent": true
    },
    "test:coverage": {
      "cache": true,
      "dependsOn": ["@repo/test-config#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"]
    },
    "test:coverage:watch": {
      "cache": false,
      "dependsOn": ["^test:coverage:watch", "@repo/test-config#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"],
      "persistent": true
    },
    "test:ui": {
      "cache": false,
      "dependsOn": ["@repo/test-config#build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"],
      "persistent": true
    },
    "merge": {
      "cache": true,
      "dependsOn": ["@repo/test-config#build", "^merge"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    }
  },
  "ui": "tui"
}
