{
  "extends": ["//"],
  "tasks": {
    "storybook:build": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    },
    "start": {
      "dependsOn": ["^start"],
      "inputs": ["storybook-static/**"]
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "cache": true,
      "persistent": false,
      "outputs": ["coverage/**"]
    }
  }
}
