{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "check-types": "tsc --noEmit",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev --port 3000",
    "start": "next start --port 3000",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "test": "cross-env NODE_ENV=test vitest run",
    "test:watch": "cross-env NODE_ENV=test vitest",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage",
    "test:coverage:watch": "cross-env NODE_ENV=test vitest --coverage",
    "test:ui": "cross-env NODE_ENV=test vitest --ui --coverage",
    "clean": "rm -rf node_modules .turbo dist coverage"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "3.44.0",
    "@payloadcms/next": "3.44.0",
    "@payloadcms/richtext-lexical": "3.44.0",
    "bcryptjs": "3.0.2",
    "googleapis": "150.0.1",
    "http-status-codes": "2.3.0",
    "jsonwebtoken": "9.0.2",
    "next": "15.3.4",
    "payload": "3.43.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.2",
    "zod": "3.24.3"
  },
  "devDependencies": {
    "@repo/shared": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/jsonwebtoken": "9.0.9",
    "@types/node": "22.15.21",
    "@types/react": "19.1.5",
    "@types/react-dom": "19.1.5",
    "typescript": "5.8.3",
    "@repo/test-config": "workspace:*"
  }
}
