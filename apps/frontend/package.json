{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "check-types": "tsc --noEmit",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbopack --port=3001",
    "build": "cross-env NODE_ENV=production NODE_OPTIONS=--no-deprecation next build",
    "opennext:build": "opennextjs-cloudflare build",
    "start": "next start --port=3001",
    "deploy": "turbo run opennext:build && opennextjs-cloudflare deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "lint": "next lint",
    "test": "cross-env NODE_ENV=test vitest run",
    "test:watch": "cross-env NODE_ENV=test vitest",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage",
    "test:coverage:watch": "cross-env NODE_ENV=test vitest --coverage",
    "test:ui": "cross-env NODE_ENV=test vitest --ui --coverage"
  },
  "dependencies": {
    "@hookform/resolvers": "5.1.1",
    "@opennextjs/cloudflare": "^1.6.1",
    "@payloadcms/next": "3.45.0",
    "@payloadcms/richtext-lexical": "3.45.0",
    "@repo/shared": "workspace:*",
    "@repo/theme": "workspace:*",
    "@repo/ui": "workspace:*",
    "@tanstack/react-query": "5.81.5",
    "@yamada-ui/lucide": "1.10.5",
    "@yamada-ui/react": "1.7.7",
    "backend": "workspace:*",
    "http-status-codes": "2.3.0",
    "mongoose": "8.15.1",
    "next": "15.3.5",
    "nuqs": "2.4.3",
    "payload": "3.45.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.60.0",
    "sharp": "0.34.3",
    "zod": "3.25.74"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "1.13.12",
    "@repo/test-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "22.15.21",
    "@types/react": "19.1.5",
    "@types/react-dom": "19.1.5",
    "typescript": "5.8.3",
    "wrangler": "^4.26.0"
  }
}
