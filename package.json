{
  "name": "uabc-web",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": "^9"
  },
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev": "turbo run dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "turbo run generate:importmap",
    "generate:types": "turbo run generate:types",
    "payload": "turbo run payload",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation biome check .",
    "precommit": "lint-staged",
    "prepare": "husky",
    "start": "turbo run start",
    "storybook": "turbo run storybook",
    "storybook:build": "turbo run storybook:build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "theme": "yamada-cli tokens ./packages/theme/src",
    "postinstall": "pnpm theme"
  },
  "dependencies": {
    "@repo/test-config": "workspace:*",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@vitest/browser": "3.1.1",
    "@vitest/coverage-istanbul": "3.1.1",
    "@vitest/ui": "3.1.1",
    "@yamada-ui/cli": "^1.2.4",
    "dotenv": "^16.4.7",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.1",
    "mongodb-memory-server": "^10.1.4",
    "nyc": "^17.1.0",
    "turbo": "^2.5.0",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "3.1.1"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "onlyBuiltDependencies": ["sharp"]
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": ["biome check --write ."]
  },
  "volta": {
    "node": "22.14.0"
  }
}
