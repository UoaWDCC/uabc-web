{
  "name": "uabc-web",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation biome check .",
    "start": "turbo run start",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "test": "cross-env NODE_ENV=test vitest",
    "test:coverage": "cross-env NODE_ENV=test vitest --coverage",
    "theme": "turbo run theme",
    "prepare": "husky",
    "precommit": "lint-staged",
    "storybook": "turbo run storybook",
    "storybook:build": "turbo run storybook:build",
    "frontend:install": "pnpm install --recursive --filter=frontend",
    "backend:install": "pnpm install --recursive --filter=backend",
    "ui:install": "pnpm install --recursive --filter=@repo/ui"
  },
  "dependencies": {
    "@vitejs/plugin-react-swc": "^3.9.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/browser": "3.1.1",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "3.1.1",
    "dotenv": "^16.4.7",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.1",
    "mongodb-memory-server": "^10.1.4",
    "turbo": "^2.5.0",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "3.1.1"
  },
  "engines": {
    "node": ">=22",
    "pnpm": "^9"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["sharp"]
  },
  "volta": {
    "node": "22.14.0"
  },
  "packageManager": "pnpm@9.0.0"
}
