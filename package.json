{
  "name": "uabc-web",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "start": "turbo run start",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "test": "cross-env NODE_ENV=test vitest",
    "test:coverage": "cross-env NODE_ENV=test vitest -- --coverage",
    "theme": "turbo run theme",
    "postinstall": "pnpm theme",
    "prepare": "husky",
    "precommit": "lint-staged",
    "storybook": "turbo run storybook",
    "storybook:build": "turbo run storybook:build",
    "web:install": "pnpm install --recursive --filter=web",
    "ui:install": "pnpm install --recursive --filter=@repo/ui"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@yamada-ui/cli": "^1.2.4",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.4.7",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.1",
    "mongodb-memory-server": "^10.1.4",
    "postcss": "^8.5.3",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.6",
    "tailwindcss": "^4.0.17",
    "turbo": "^2.5.0",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  },
  "engines": {
    "node": ">=22",
    "pnpm": "^9"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["sharp"]
  },
  "volta": {
    "node": "22.14.0"
  },
  "packageManager": "pnpm@9.0.0"
}
